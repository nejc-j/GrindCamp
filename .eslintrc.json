{
  "extends": [
    "airbnb",
    "plugin:prettier/recommended",
    "next/core-web-vitals",
    "airbnb-typescript"
  ],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  },
  "parserOptions": { "project": ["tsconfig.json"] }
}
